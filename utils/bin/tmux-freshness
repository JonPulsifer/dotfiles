#!/usr/bin/env bash
set -euo pipefail

# > 1 day = stale
freshness(){
  uptime=$(uptime)
  ut=$(echo "${uptime}" | awk '{print $3,$4}' | tr -d ,) # 00:00 up 7 days
  case "${ut}" in
    *mins) icon='ðŸŒ±' ;;
    *hours) icon='ðŸŒ¼' ;;
    *days) icon='ðŸŒ¼' ;;
    [2-3]\ days) icon='ðŸ¥€' ;;
    *) icon='ðŸ¥€' ;;
  esac
}


freshness

# echo ${uptime} | awk '{print $3,$4}' | tr -d ,
echo ${icon}
